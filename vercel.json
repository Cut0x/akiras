{
  "rewrites": [
    {
      "source": "/qrcode",
      "destination": "/pages/qrcode.html"
    },
    {
      "source": "/memes",
      "destination": "/pages/memes.html"
    },
    {
      "source": "/citations",
      "destination": "/pages/citations.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
